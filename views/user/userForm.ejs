<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Henry's Speakeasy</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel ="stylesheet" href='../../stylesheets/style.css'> 
  <link rel ="stylesheet" href='../../stylesheets/tailwind.css'> 
  <script type="text/javascript" src="../../script/join.js"></script>
  <script type="text/javascript" src="../../script/cursorDeleteMessage.js"></script>
  <link rel="icon" type="image/x-icon" href="/assets/images/SpeakeasyFavicon.ico">
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" />
</head>
<body class = "bg-[#555150] h-auto font-['DecoTech'] relative 
    before:bg-[url('<%= BackgroundImageURL %>')] before:absolute before:h-full before:w-full
    before:bg-cover before:top-0 before:left-0 before:right-0 before:opacity-60 before:z-[-2]
    before:bg-no-repeat  before:brightness-50 before:bg-center">
  <div 
  id="container"
  class = "w-full flex flex-col relative grow min-h-[120vh]">
      <div 
        id = "contentWrapper"
        class = "ContentWrapper">
          <div class = "w-full mb-[135px]">
            <%- include("../partials/header") %>
            <%- include("../partials/MobileMenu") %>
          </div>
          <div class = "w-11/12 mx-auto sm:w-10/12 md:w-7/12 lg:w-5/12">
              <% if(typeof error != 'undefined' && typeof error.errors != 'undefined') {%> 
                  <div 
                    id="ErrorDiv"
                    class = "my-[50px] text-black w-full">
                      <h2 class = "font-bold">Error: </h2>
                      <% error.errors.forEach(val => { %> 
                      <p class = "text-white"><%= val.msg %></p>
                      <% }) %>
                  </div>
              <%}%>
              <h1
                class = "text-center text-white text-5xl"
              ><%= title %></h1>
                <img 
                src = "<%= UpperFrame %>" 
                    alt = "upper-frame"
                    class = "w-full h-auto" 
                    />
                <form
                action="" 
                method="POST"
                enctype="multipart/form-data"
                class="[&>div>label]:text-black [&>div>label]:uppercase [&>div>label]:font-bold [&>div]:grid [&>div>input]:rounded-lg 
                [&>div]:w-full [&>div]:my-[10px] [&>div>input]:pl-3 [&>div>input]:bg-[rgba(0,0,0,0)] 
                [&>div>input]:text-black [&>div>input]:border-white [&>div>input]:border-[1px]
                bg-[#f2e798] rounded-md p-10 [&>div>input]:placeholder:text-[#545454] text-2xl
                [&>div>input]:placeholder:text-base" 
                id = "form">
                <div>
                    <label for = "profile_pic">Profile picture</label>
                    <input 
                        name = "profile_pic" 
                        id = "profile_picInput"
                        type = "file"
                        placeholder = "Upload an image for your your profile picture here" 
                        class = "file:rounded-lg file:font-['DecoTech'] file:bg-[#99cbae]
                        file:text-white cursor-pointer"
                        value = "<%= typeof userDetail.profile_pic != 'undefined' ? userDetail.profile_pic : null %>"
                        />
                </div>
                <div>
                    <label for = "username">Username</label>
                    <input 
                        name = "username" 
                        id = "usernameInput"
                        type = "text"
                        placeholder = "Type your username here" 
                        required = "true"
                        class = ""
                        value = "<%= typeof userDetail.username != 'undefined' ? userDetail.username : null %>"
                        />
                </div>
                <div>
                    <label for = "email">Your email</label>
                    <input 
                        name = "email" 
                        id = "emailInput"
                        type = "text"
                        placeholder = "Type your email here" 
                        required = "true"
                        class = ""
                        value = "<%= typeof userDetail.email != 'undefined' ? userDetail.email : null %>"
                        />
                </div>
                <%- include('favoriteDrink')%>
                <div>
                    <label for = "biography">Bio</label>
                    <textarea
                        name = "biography" 
                        id = "biographyInput"
                        type = "biography"
                        placeholder = "Type your biography here" 
                        rows="5"
                        required = "true"
                        class = "resize-none rounded-lg w-full p-1 bg-[rgba(0,0,0,0)] border-[1px] 
                        border-white placeholder:text-[#545454]"
                        /><%=  typeof userDetail.biography != 'undefined' && userDetail.biography != "" ? userDetail.biography.trim() : null %>
                        </textarea>
                </div>
                <%- include('./SocialMediaSelect')%>
                <%- include('../partials/FormButtons')%>
                </form>
                <img 
                src = "<%= BottomFrame %>" 
                alt = "upper-frame"
                class = "w-full h-auto" 
                    />
          </div>
      </div>
      <%- include('../partials/footer') %>
  </div>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
  <%- include('validateEmail') %>
</body>
</html>