<% var ProfilePicStyle = "select-none w-[270px] h-[270px] object-cover rounded-full mx-auto" %>
<div 
class = "m-auto overflow-hidden relative"
id = "AvatarField">
	<% if(user && (user.member || userDetail._id == user.id)) {%>
		<% if(typeof userDetail.profile_pic != 'undefined' && typeof userDetail.profile_pic.data != 'undefined') {%>
			<img 
				src="data:<%= userDetail.profile_pic.contentType %>;base64,<%= userDetail.profile_pic.data.toString('base64') %>"
				class = "<%= ProfilePicStyle %>"
				/>
		<%} else {%>
			<div 
				class ="w-[250px] h-[250px] m-auto rounded-full bg-black block relative">
				<div class = "text-white text-2xl text-center absolute top-[45%] left-0 right-0">User's profile picture has not been uploaded yet</div>
			</div>
		<% } %>
	<% } else { %>
		<img src="<%= avatar %>"
			class="<%= ProfilePicStyle %>"
			alt="avatar" />
	<% }%>
</div>